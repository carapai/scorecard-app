{
  "name": "hisptz-scorecard-workspaces",
  "version": "2.5.0-test",
  "description": "Interactive Scorecard Application",
  "license": "BSD-3-Clause",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "start:app": "yarn workspace app start",
    "test:open:app": "yarn workspace app cy:open",
